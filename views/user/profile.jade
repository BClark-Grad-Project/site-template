// Begin Jade template.
extends ../layout

block css
  link(rel='stylesheet', href='/css/profile.css')

include ./mixins/profile.jade

//-HTML content to display.
block content
  section#main.container
    form(role='form', method='POST', action='/account/edit', id='edit-profile-form')
      include ./components/profile-edit-form.jade
      .row
        .col-xs-12.col-sm-12.col-md-3.col-lg-2
          +userHeader()
        .col-xs-12.col-sm-12.col-md-9.col-lg-10
          br
          h3(style="margin-top:0px;") Given Name
          +userName()
          h3 Identification Detail
          +userDetail()
          h3 Contact Detail
          +userContact()
          +saveEdits()
// End Jade Template