// Begin Jade template.
extends ../../layout

block css
  link(rel='stylesheet', href='/css/admin-users.css')

include ./mixins/users.jade

//-HTML content to display.
block content
  section#main.container
    .row
      //-Columns in a row must equal 12. 
      .user-stats.col-xs-12.col-sm-12.col-md-12.col-lg-12
        h1 Manage User Profiles
        +userStatistics()
      .col-xs-12.col-sm-12.col-md-12.col-lg-12
        .col-xs-12.col-sm-9.col-md-10.col-lg-10
          +findUser()
        .col-xs-12.col-sm-3.col-md-2.col-lg-2
          h5
            b Add New User
          hr
          button.btn.btn-primary.btn-lg.col-xs-12.col-sm-12.col-md-12.col-lg-12(type='button') Create
// End Jade Template