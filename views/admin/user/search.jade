// Begin Jade template.
extends layout

//-CSS is inserted in the HEAD tag.
block css
  
//-JavaScript will be inserted in the header tag.
block js-top

//-JavaScript will be inserted at the end of the BODY tag.
block js-bottom
  
//-Add navigation item to general navigation set.
block nav
  
//-Add navigation item to existing Administrator navigation set.
block navAdmin
    
//-HTML content to display.
block content
  section#main.container
    .row
      //-Columns in a row must equal 12. 
      .col-xs-12.col-sm-12.col-md-12.col-lg-12
        h1 Search Results
        hr
        small Select a profile to edit.
        br
        .col-xs-4.col-sm-4.col-md-4.col-lg-4
          h6 
            b Real Name
        .col-xs-2.col-sm-2.col-md-2.col-lg-2
          h6 
            b Login
        .col-xs-6.col-sm-6.col-md-6.col-lg-6
          h6 
            b Email
        for i in userlist
          a(href='/manager/users/edit/' + i.user.id)
            .col-xs-4.col-sm-4.col-md-4.col-lg-4
              p #{i.detail.first} #{i.detail.middle}. #{i.detail.last}
            .col-xs-2.col-sm-2.col-md-2.col-lg-2
              p #{i.user.name}
            .col-xs-6.col-sm-6.col-md-6.col-lg-6
              p #{i.user.email}
