mixin statNumber(heading, val)
  .user-stat-item.col-xs-6.col-sm-4.col-md-4.col-lg-4
    .panel.panel-default
      h6 
        b #{heading}
      .user-stat-number
        p #{val}
      
mixin userStatistics()
  h2 User Statistics
  .col-xs-12.col-sm-12.col-md-12.col-lg-12
    hr
  +statNumber('Total Accounts', 0) 
  +statNumber('Online Now', 0)
  +statNumber('Recently Online (24 Hour)', 0)
  +statNumber('Recently Online (7 Day)', 0)
  +statNumber('Recently Online (30 Hour)', 0)
  +statNumber('Recently Online (Year)', 0)
  
mixin userAuthFields()
  .col-xs-12.col-sm-12.col-md-12.col-lg-12
    .input-group
      .input-group-addon Id &nbsp; &nbsp; &nbsp; 
      input.form-control(name='id', type='input')
    br
  .col-xs-12.col-sm-12.col-md-6.col-lg-6
    .input-group
      .input-group-addon Login
      input.form-control(name='user', type='input')
    br
  .col-xs-12.col-sm-12.col-md-6.col-lg-6
    .input-group
      .input-group-addon Email
      input.form-control(name='email', type='input')
    br
  
mixin userNameFields()
  .col-xs-12.col-sm-12.col-md-6.col-lg-6
    .input-group
      .input-group-addon First &nbsp; &nbsp; 
      input.form-control(name='first', type='input')
    br
  .col-xs-12.col-sm-12.col-md-6.col-lg-6
    .input-group
      .input-group-addon Middle
      input.form-control(name='middle', type='input')
    br
  .col-xs-12.col-sm-12.col-md-6.col-lg-6
    .input-group
      .input-group-addon Last &nbsp; &nbsp; 
      input.form-control(name='last', type='input')
    br
  

mixin findButtons()
  button.btn.btn-primary.btn-lg.disabled.pull-right(type='submit', disabled='disabled') Search
  button.btn.btn-default.btn-lg.disabled.pull-right(type='reset', disabled='disabled', style='margin-right: 10px;') Clear 
  
mixin findUser()
  .panel.panel-default
    .panel-body(role='tabpanel')
      h5
        b Find User Profile
       p Search for user profile by:
      form(role='form', method='POST', action='/account/find', id='find-profile-form')
        ul.nav.nav-tabs(role='tablist')
          li.active(role='presentation')
            a(href='#profile-by-auth', aria-controls='Authentication', role='tab', data-toggle='tab') Authentication
          li(role='presentation')
            a(href='#profile-by-name', aria-controls='User Name', role='tab', data-toggle='tab') User Name
        .col-xs-12.col-sm-12.col-md-12.col-lg-12
          br
        .tab-content
          #profile-by-auth.tab-pane.fade.in.active(role='tabpanel')
            +userAuthFields()
          #profile-by-name.tab-pane.fade(role='tabpanel')
            +userNameFields()
        .col-xs-12.col-sm-12.col-md-12.col-lg-12
          +findButtons()
          