mixin fixEmail()
  .col-xs-12.col-sm-12.col-md-12.col-lg-12
    form#fix-form-email(method='POST', action='/authentication/register')
      if retry.credentials.email
        p Try a different email.
      else 
        p No login name was provided.
      +resetRegistrationFields()
      +setAlias()
      - var email = retry.credentials.email ? retry.credentials.email : '';
      label(for='email') Email 
      input.form-control(type='input', name='email', value=email)    
      br
      button.btn.btn-lg(type='submit') Submit
    hr
    p 
      a(data-toggle='modal', data-target='#login-form-modal') Sign-in or reset password
      | for user account.
    if retry.social
      if retry.social.facebook.id || retry.social.linkedin.id || retry.social.gplus.id
        hr
        p Add social services to user account:
        br        
        form#fix-form-social-addition(method='POST', action='/authentication/register/add/social')
          +setUserId()
          +setAlias()
          +setEmail()
          +resetRegistrationFields()       
          button.btn.btn-lg(type='submit') Add Account

mixin fixAlias()
  .col-xs-12.col-sm-12.col-md-12.col-lg-12
    if retry.credentials.alias
      p The name you have chosen is taken.  
    else 
      p No login name was provided.
    form#fix-form-alias(method='POST', action='/authentication/register')
      +resetRegistrationFields()
      +setEmail()
      - var alias = retry.credentials.alias ? retry.credentials.alias : '';
      label(for='alias') Login Name
      input.form-control(type='input', name='alias', value=alias)
      br
      button.btn.btn-lg(type='submit') Submit
      
mixin fixEmailAlias()
  .col-xs-12.col-sm-12.col-md-12.col-lg-12
    form#fix-form-email-alias(method='POST', action='/authentication/register')
      +resetRegistrationFields()
      if retry.credentials.alias
        p The name you have chosen is taken.  
      else 
        p No login name was provided.
      - var email = retry.credentials.email ? retry.credentials.email : '';
      label(for='email') Email
      input.form-control(type='input', name='email', value=email, required)  
      if retry.credentials.alias
        p The name you have chosen is taken.  
      else  
