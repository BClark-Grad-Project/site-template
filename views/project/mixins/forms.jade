mixin taskForm()   
  input.id(type='hidden', name='id')
  input(type='hidden', name='sdl', value=project.id)
  .col-xs-4.col-sm-4.col-md-4.col-lg-3(style='margin-left:0px;padding-left:0px;')
    small Status
    br
    select.form-control(name='status')
      option(value='Pending') Pending
      option(value='Active') Active
      option(value='Complete') Complete 
    br
  .col-xs-8.col-sm-8.col-md-8.col-lg-9
    small Name
    br
    input.form-control(type='text', name='name')
    br
  small Description
  br
  textarea.form-control(type='textarea', name='description', style='min-height:150px;')
  br
  if project.iteration
    .col-xs-12.col-sm-12.col-md-12.col-lg-12(style='margin:0px;padding:0px;')
      small Assignment
      br
    select.form-control(type='date', name='iteration')
      option  
      for i in project.iteration
        option(value=i.id) #{i.name}
    br
  
   
