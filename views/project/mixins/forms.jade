mixin formProcessBtn()
  button.btn.btn-inverse(type='button', style='margin:10px;', data-dismiss='modal') Cancel
  button.btn.btn-default(type='submit', style='margin:10px;') Save  
  
mixin projectForm()
  if !project
    - var project = {start:new Date(), stop:new Date(),iteration:{},task:{},stories:{}};
  input.id(type='hidden', name='id', value=project.id)
  .col-xs-12.col-sm-12.col-md-4.col-lg-4
    small Name
    br
    input.form-control(type='text', name='name', value=project.name)
    br
  .col-xs-12.col-sm-12.col-md-8.col-lg-8
    small Duration
    br
    .col-xs-12.col-sm-6.col-md-6.col-lg-6(style='margin:0px;padding:0px;')
      .input-group(style='padding-right:10px')
        .input-group-addon Start
        - var day = ("0" + project.start.getDate()).slice(-2);
        - var month = ("0" + (project.start.getMonth() + 1)).slice(-2);
        - var start = project.start.getFullYear()+"-"+(month)+"-"+(day) ;
        input.form-control(type='date', name='start', value=start)
      br
    .col-xs-12.col-sm-6.col-md-6.col-lg-6(style='margin:0px;padding:0px;')
      .input-group
        .input-group-addon Stop  
        - var day = ("0" + project.stop.getDate()).slice(-2);
        - var month = ("0" + (project.stop.getMonth() + 1)).slice(-2);
        - var stop = project.stop.getFullYear()+"-"+(month)+"-"+(day) ;
        input.form-control(type='date', name='stop', value=stop)
    br
  .col-xs-12.col-sm-12.col-md-4.col-lg-4
    small Description
    br
    textarea.form-control(type='textarea', name='description', style='min-height:150px;max-width:100%;') #{project.description}
    br
    br
  .col-xs-12.col-sm-12.col-md-8.col-lg-8
    small Vision
    br
    textarea.form-control(type='textarea', name='vision', style='min-height:150px;max-width:100%;') #{project.vision}
    br
    br
   
