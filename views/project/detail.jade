  section
    #task.container
      .row
        .col-xs-12.col-sm-7.col-md-8.col-lg-8.pull-left
          h3
            span.glyphicon.glyphicon-tasks
            |   Task Priority 
        .col-xs-12.col-sm-5.col-md-4.col-lg-4.pull-right
          br
          h4
            |  Project Task List     
          if project
            ul.list-group
              for task in project.task
                li.list-group-item
                  a.text-muted(href='/project/' + project.task.id) #{project.task.name}
          else
            small
              b None
          br
          br
          br
        .col-xs-12.col-sm-7.col-md-8.col-lg-8.pull-left
          h4 Current Task List   
          if project
            ul.list-unstyled
              for task in project.task
                if project.task.status == 'active'
                  li
                    a.text-muted(href='/project/' + project.task.id) #{project.task.name}
          else
            small
              b None
          br
          br
          br
        .col-xs-12.col-sm-12.col-md-12.col-lg-12
          h4
            span.glyphicon.glyphicon-th
            |  Task Stories
          small Stories are arranged by task and priority.
        .col-xs-12.col-sm-12.col-md-12.col-lg-12
          if project
            for task in project.task
              for story in task.stories
                .col-xs-6.col-sm-4.col-md-3.col-lg-3
                  .panel.panel-default
                    .col-xs-6.col-sm-6.col-md-6.col-lg-6
                      h5 Story #
                    .col-xs-6.col-sm-6.col-md-6.col-lg-6
                      small 
                        b State:  
                        |  Incomplete
                    .col-xs-12.col-sm-12.col-md-12.col-lg-12
                      p Description
                      br
                      br
                  br
                  br
            br
            br
          else
            small
              b None
              br
              br
              br
